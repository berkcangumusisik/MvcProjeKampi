@model EntityLayer.Concrete.ImageFile

@{
    ViewBag.Title = "ImageAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Fotoğraf Ekleme Sayfası</h2>
<br />
<br />
@using (Html.BeginForm("ImageAdd", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    @Html.Label("Fotoğraf Başlığı Giriniz")
    @Html.TextBoxFor(x => x.ImageName, new { @class = "form-control" })

    <br /><br />
    @Html.Label("Fotoğraf Yükleyiniz.")
    <br />
    <input type="file" name="ImagePath" />
    <br /><br />

    <button class="btn btn-info">Fotoğraf Ekle</button>
</div>
}