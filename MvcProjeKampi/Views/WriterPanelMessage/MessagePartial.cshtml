<div class="card">
    <div class="card-header">
        <h3 class="card-title">Seçenekler</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="/WriterPanelMessage/WriterInbox/" class="nav-link">
                    <i class="fas fa-inbox"></i> Gelen Mesajlar
                    <span class="badge bg-red float-right">@ViewBag.sendMail</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/WriterPanelMessage/WriterSendbox/" class="nav-link">
                    <i class="far fa-envelope"></i> Gönderilen Mesajlar
                    <span class="badge bg-success float-right">@ViewBag.receiverMail</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/WriterPanelMessage/Draft/" class="nav-link">
                    <i class="far fa-file-alt"></i> Taslaklar
                    <span class="badge bg-yellow float-right">@ViewBag.draftMail</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-filter"></i> Spam
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="far fa-trash-alt"></i> Çöp Kutusu
                </a>
            </li>
        </ul>
    </div>
    <!-- /.card-body -->
</div>
